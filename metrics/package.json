{
  "name": "metrics",
  "version": "1.0.0",
  "description": "My Moleculer microservice",
  "scripts": {
    "dev": "moleculer-runner --repl --hot service.js",
    "start": "moleculer-runner service.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "eslint": "^5.0.1",
    "jest": "^23.3.0",
    "jest-cli": "^23.3.0",
    "moleculer-repl": "^0.5.5"
  },
  "dependencies": {
    "moleculer": "^0.13.0",
    "moleculer-console-tracer": "^0.2.0",
    "nats": "^1.2.2"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": ".coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "service.js"
    ],
    "testEnvironment": "node",
    "roots": [
      "./"
    ]
  }
}
